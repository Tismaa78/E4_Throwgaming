{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{#
    cette page va lister les différents genres comme si
    on voulait consulter une liste de jeu selon un genre
    spécifique.
#}

{% block body %}

<div>
    <h1 class="text-2xl font-bold">Liste des genres</h1>
    <h4 class="text-sky-600">Retrouvez vos jeux par genre</h4>
</div>

<div class="w-full grid gap-4 grid-cols-3 mt-10">
    {% for genre in genres %}
        <a href="{{ path('app_jeu_filtre', {'genre': genre.libelle}) }}">
            <div class="flex justify-center items-center h-[10rem] p-x-10 p-y-10 bg-gradient-to-t from-{{ genre.couleur }}-300 to-{{ genre.couleur }}-100 border-solid border border-{{ genre.couleur }}-400 rounded-[20px] hover:outline hover:outline-6 hover:outline-blue-500/30">
                <h1 class="block text-2xl font-bold">{{ genre.libelle }}</h1>
            </div>
        </a>
    {% endfor %}
</div>

{% endblock %}
