{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Formulaire Jeux{% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block body %}
<h1>Formulaire Jeux</h1>
{{ form_start(formJeu) }}
<div class="flex flex-col">
    {{ form_row(formJeu.titre, {'label' : "Titre"}) }}
    {{ form_row(formJeu.prix, {'label' : "Prix"}) }}
    {{ form_row(formJeu.image, {'label' : "Image"}) }}
    {{ form_row(formJeu.description, {'label' : "Description"}) }}
    {{ form_row(formJeu.date, {'label' : "Ann√©e"}) }}
    {{ form_row(formJeu.genre, {'label' : "Genre"}) }}
    {{ form_row(formJeu.editeur, {'label' : "Editeur"}) }}
    {{ form_row(formJeu.consoles, {'label' : "Les Consoles"}) }}
</div>
<input type="submit" class="btn btn-success" value="valider">
{{ form_end(formJeu) }}
{% endblock %}

