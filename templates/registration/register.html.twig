{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-2xl font-bold mb-5">Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        <div class="grid grid-cols-2 gap-3">
            {{ form_row(registrationForm.nom) }}
            {{ form_row(registrationForm.prenom) }}
        </div>
        {{ form_row(registrationForm.adresse) }}
        {{ form_row(registrationForm.ville) }}
        {{ form_row(registrationForm.cp) }}
        {{ form_row(registrationForm.tel) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        <div> {# case Ã  cocher #}
            <span class="mr-3">{{form_label(registrationForm.agreeTerms)}}</span>
            <span>{{form_widget(registrationForm.agreeTerms)}}</span>
            <div>{{form_errors(registrationForm.agreeTerms)}}</div>
        </div>

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
