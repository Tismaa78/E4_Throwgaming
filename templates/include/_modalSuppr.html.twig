<div id="confirmSuppr" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
        <a id="confirm" href="" class="btn btn-primary">Confirmer</a>
      </div>
    </div>
  </div>
</div>

<script>
    $("a[data-lien]").click(function(){
        // fetch elem
        let lien=$(this).attr("data-lien");
        let titre=$(this).attr("data-titre");
        let message=$(this).attr("data-message");
        let libelleConf=$(this).attr("data-libelleConf");

        $("#confirm").attr("href", lien);
        $(".modal-title").text(titre);
        $(".modal-body").text(message);
        $("#confirm").text(libelleConf);
    })
</script>